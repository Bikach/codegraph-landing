---
interface Props {
  path: string;
  alt: string;
  caption?: string;
}

const { path, alt, caption } = Astro.props;
const fullPath = `/screenshots/${path}`;
---

<figure class="my-8">
  <div class="bg-gray-800 border border-gray-700 rounded-lg overflow-hidden">
    <img
      src={fullPath}
      alt={alt}
      class="w-full screenshot-img"
      loading="lazy"
    />
    <div class="screenshot-placeholder hidden items-center justify-center h-64 bg-gray-800/50 text-gray-500">
      <div class="text-center">
        <svg class="w-12 h-12 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <p class="text-sm">Screenshot: {alt}</p>
        <p class="text-xs text-gray-600 mt-1">{fullPath}</p>
      </div>
    </div>
  </div>
  {caption && <figcaption class="text-center text-gray-500 text-sm mt-2">{caption}</figcaption>}
</figure>

<script>
  document.querySelectorAll('.screenshot-img').forEach((img) => {
    img.addEventListener('error', function() {
      this.style.display = 'none';
      const placeholder = this.nextElementSibling;
      if (placeholder) {
        placeholder.style.display = 'flex';
      }
    });
  });
</script>
