---
interface Props {
  code: string;
  lang?: string;
  title?: string;
}

const { code, lang = "bash", title } = Astro.props;
---

<div class="code-block my-6 overflow-hidden rounded-lg shadow-sm">
  {title && (
    <div class="flex items-center justify-between bg-surface-hover px-4 py-2 rounded-t-lg border border-border">
      <div class="flex items-center gap-2">
        <div class="flex gap-1.5">
          <span class="h-3 w-3 rounded-full bg-danger"></span>
          <span class="h-3 w-3 rounded-full bg-attention"></span>
          <span class="h-3 w-3 rounded-full bg-secondary"></span>
        </div>
        <span class="ml-2 text-sm text-text-secondary">{title}</span>
      </div>
      <button
        class="flex items-center gap-1 rounded px-2 py-1 text-xs text-text-secondary transition-colors hover:bg-bg-subtle hover:text-text-primary cursor-pointer"
        aria-label="Copy code"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
          />
        </svg>
        Copy
      </button>
    </div>
  )}
  <div class="relative">
    {!title && (
      <button
        class="absolute right-2 top-2 flex items-center gap-1 rounded px-2 py-1 text-xs text-text-secondary transition-colors hover:bg-surface-hover hover:text-text-primary cursor-pointer"
        aria-label="Copy code"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
          />
        </svg>
        Copy
      </button>
    )}
    <pre class="code-body overflow-x-auto p-4 bg-bg-subtle border-x border-b border-border"><code class="font-mono text-sm text-text-primary" data-lang={lang}>{code}</code></pre>
  </div>
</div>

<style>
  .code-body {
    border-radius: 0 0 0.5rem 0.5rem;
  }
</style>

<script>
  document.querySelectorAll('[aria-label="Copy code"]').forEach(button => {
    button.addEventListener('click', async () => {
      const code = button.closest('.code-block')?.querySelector('code')?.textContent || '';
      await navigator.clipboard.writeText(code);
      const originalText = button.innerHTML;
      button.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>Copied!';
      setTimeout(() => button.innerHTML = originalText, 2000);
    });
  });
</script>
