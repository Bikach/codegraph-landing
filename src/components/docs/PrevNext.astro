---
interface NavLink {
  title: string;
  href: string;
}

interface Props {
  prev?: NavLink | null;
  next?: NavLink | null;
}

const { prev, next } = Astro.props;
---

<nav class="mt-12 flex items-center justify-between border-t border-gray-700 pt-6">
  {prev ? (
    <a
      href={prev.href}
      class="group flex items-center gap-2 rounded-lg px-4 py-2 text-gray-400 transition-colors hover:bg-gray-800 hover:text-white"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 transition-transform group-hover:-translate-x-1"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      <span>
        <span class="block text-xs uppercase tracking-wide">Previous</span>
        <span class="block font-medium">{prev.title}</span>
      </span>
    </a>
  ) : (
    <div></div>
  )}

  {next ? (
    <a
      href={next.href}
      class="group flex items-center gap-2 rounded-lg px-4 py-2 text-right text-gray-400 transition-colors hover:bg-gray-800 hover:text-white"
    >
      <span>
        <span class="block text-xs uppercase tracking-wide">Next</span>
        <span class="block font-medium">{next.title}</span>
      </span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 transition-transform group-hover:translate-x-1"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  ) : (
    <div></div>
  )}
</nav>
