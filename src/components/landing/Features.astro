---
// Features section showcasing all MCP tools as feature cards
interface Feature {
  name: string;
  description: string;
  icon: string;
}

const features: Feature[] = [
  {
    name: "search_nodes",
    description: "Search classes, interfaces, functions by name or pattern",
    icon: "magnifying-glass"
  },
  {
    name: "get_callees",
    description: "Find all functions called by a specified function",
    icon: "arrow-outgoing"
  },
  {
    name: "get_callers",
    description: "Find all functions that call a specified function",
    icon: "arrow-incoming"
  },
  {
    name: "get_neighbors",
    description: "Get dependencies and dependents of a class",
    icon: "network"
  },
  {
    name: "get_implementations",
    description: "Find all classes implementing an interface",
    icon: "hierarchy"
  },
  {
    name: "get_impact",
    description: "Analyze impact of modifying a node",
    icon: "ripple"
  },
  {
    name: "find_path",
    description: "Find shortest path between two nodes",
    icon: "route"
  },
  {
    name: "get_file_symbols",
    description: "List all symbols defined in a file",
    icon: "file-list"
  }
];
---

<section class="py-20 px-4 sm:px-6 lg:px-8 bg-[var(--color-bg-subtle)] relative overflow-hidden">

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section Title -->
    <h2 class="text-3xl sm:text-4xl font-bold text-center mb-12">
      <span class="gradient-text">Powerful Tools</span> at Your Fingertips
    </h2>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {features.map((feature) => (
        <div class="glass-card p-5 transition-colors duration-200 group">
          <!-- Icon -->
          <div class="w-10 h-10 mb-4 flex items-center justify-center rounded-md bg-[var(--color-primary)]/10 group-hover:bg-[var(--color-primary)]/15 transition-colors duration-200">
            {feature.icon === "magnifying-glass" && (
              <svg class="w-6 h-6 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            )}
            {feature.icon === "arrow-outgoing" && (
              <svg class="w-6 h-6 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            )}
            {feature.icon === "arrow-incoming" && (
              <svg class="w-6 h-6 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
              </svg>
            )}
            {feature.icon === "network" && (
              <svg class="w-6 h-6 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            )}
            {feature.icon === "hierarchy" && (
              <svg class="w-6 h-6 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM9 15a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1v-4zM12 10v4M7 10v2a2 2 0 002 2h6a2 2 0 002-2v-2"></path>
              </svg>
            )}
            {feature.icon === "ripple" && (
              <svg class="w-6 h-6 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            )}
            {feature.icon === "route" && (
              <svg class="w-6 h-6 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
            )}
            {feature.icon === "file-list" && (
              <svg class="w-6 h-6 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            )}
          </div>

          <!-- Tool Name -->
          <h3 class="font-mono text-lg font-semibold text-[var(--color-text-primary)] mb-2">
            {feature.name}
          </h3>

          <!-- Description -->
          <p class="text-[var(--color-text-secondary)] text-sm leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
