---
// Benchmark section - showcases performance results comparing with and without CodeGraph MCP

interface BenchmarkScenario {
  name: string;
  withMcp: string;
  withoutMcp: string;
  savings: string;
}

const scenarios: BenchmarkScenario[] = [
  { name: "Find Callers", withMcp: "$0.066", withoutMcp: "$0.073", savings: "9%" },
  { name: "Find Implementations", withMcp: "$0.043", withoutMcp: "$0.070", savings: "38%" },
  { name: "Impact Analysis", withMcp: "$0.187", withoutMcp: "$0.337", savings: "44%" },
  { name: "Dependency Analysis", withMcp: "$0.114", withoutMcp: "$0.193", savings: "41%" },
  { name: "Call Chain", withMcp: "$0.136", withoutMcp: "$0.252", savings: "46%" },
];

const stats = [
  { value: "45%", label: "Fewer LLM Calls" },
  { value: "46%", label: "Fewer Tokens" },
  { value: "41%", label: "Cost Reduction" },
  { value: "51%", label: "Faster" },
];
---

<section id="benchmark" class="py-24 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
  <!-- Background gradient accents -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-64 md:w-96 h-64 md:h-96 bg-[var(--color-primary)]/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-64 md:w-96 h-64 md:h-96 bg-[var(--color-secondary)]/5 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        <span class="gradient-text">Proven Results</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        Real-world benchmarks show significant improvements in efficiency and cost savings.
      </p>
    </div>

    <!-- Big Headline Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-16">
      {stats.map((stat, index) => (
        <div class="stat-card glass-card p-6 md:p-8 text-center group hover:border-[var(--color-primary)]/50 transition-all duration-300">
          <div class="stat-value text-4xl md:text-5xl lg:text-6xl font-bold mb-2 bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] bg-clip-text text-transparent animate-gradient">
            {stat.value}
          </div>
          <div class="text-gray-400 text-sm md:text-base font-medium">
            {stat.label}
          </div>
        </div>
      ))}
    </div>

    <!-- Comparison Table -->
    <div class="glass-card p-6 md:p-8 mb-8">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-[var(--color-border)]">
              <th class="text-left py-4 px-4 text-gray-400 font-medium text-sm uppercase tracking-wider">Scenario</th>
              <th class="text-right py-4 px-4 text-green-400 font-medium text-sm uppercase tracking-wider">With MCP</th>
              <th class="text-right py-4 px-4 text-red-400 font-medium text-sm uppercase tracking-wider">Without MCP</th>
              <th class="text-right py-4 px-4 text-[var(--color-primary)] font-medium text-sm uppercase tracking-wider">Savings</th>
            </tr>
          </thead>
          <tbody>
            {scenarios.map((scenario, index) => (
              <tr class="border-b border-[var(--color-border)]/50 hover:bg-white/5 transition-colors">
                <td class="py-4 px-4 text-white font-medium">{scenario.name}</td>
                <td class="py-4 px-4 text-right text-green-400 font-mono">{scenario.withMcp}</td>
                <td class="py-4 px-4 text-right text-red-400 font-mono">{scenario.withoutMcp}</td>
                <td class="py-4 px-4 text-right">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-[var(--color-primary)]/20 text-[var(--color-primary)]">
                    {scenario.savings}
                  </span>
                </td>
              </tr>
            ))}
            <!-- Total Row -->
            <tr class="bg-gradient-to-r from-[var(--color-primary)]/10 to-[var(--color-secondary)]/10">
              <td class="py-4 px-4 text-white font-bold">Total</td>
              <td class="py-4 px-4 text-right text-green-400 font-mono font-bold">$0.55</td>
              <td class="py-4 px-4 text-right text-red-400 font-mono font-bold">$0.92</td>
              <td class="py-4 px-4 text-right">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] text-white">
                  41%
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Note and Link -->
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-gray-500 text-sm italic">
        Tested on Kotlin/Quarkus backend, 3 iterations each
      </p>
      <a
        href="https://bikach.github.io/codeGraph/report/"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-[var(--color-primary)] hover:text-[var(--color-secondary)] transition-colors font-medium"
      >
        View full report
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Gradient animation for stat values */
  .animate-gradient {
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Stat card hover effect */
  .stat-card {
    position: relative;
    overflow: hidden;
  }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .stat-card:hover::before {
    transform: scaleX(1);
  }

  /* Stat value glow on hover */
  .stat-card:hover .stat-value {
    text-shadow: 0 0 40px rgba(59, 130, 246, 0.5);
  }

  /* Table responsive styles */
  @media (max-width: 640px) {
    table {
      font-size: 0.875rem;
    }

    th, td {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }
  }
</style>
