---
// Hero section for CodeGraph landing page
---

<section class="hero">
  <!-- Subtle background pattern -->
  <div class="hero-bg">
    <div class="grid-pattern"></div>
  </div>

  <div class="hero-content">
    <!-- Main headline -->
    <h1 class="hero-headline">
      Give Claude a <span class="gradient-text">Map</span> of Your Codebase
    </h1>

    <!-- Subheadline -->
    <p class="hero-subheadline">
      Stop wasting tokens on file searches. CodeGraph builds a knowledge graph so Claude navigates your code in 1-2 calls instead of 20.
    </p>

    <!-- CTA Buttons -->
    <div class="hero-ctas">
      <a href="/docs/getting-started" class="btn-primary">
        <span>Get Started</span>
        <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
      <a href="#benchmark" class="btn-secondary">
        <svg class="btn-icon-left" viewBox="0 0 20 20" fill="currentColor">
          <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z" />
        </svg>
        <span>View Benchmark</span>
      </a>
    </div>

    <!-- Stats section -->
    <div class="hero-stats">
      <div class="stat-item">
        <span class="stat-value">45%</span>
        <span class="stat-label">Fewer LLM Calls</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-value">41%</span>
        <span class="stat-label">Cost Reduction</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-value">51%</span>
        <span class="stat-label">Faster</span>
      </div>
    </div>
  </div>

  <!-- Visual: Graph animation placeholder -->
  <div class="hero-visual">
    <div class="graph-container">
      <!-- Animated nodes -->
      <div class="graph-node node-1">
        <span class="node-label">UserService</span>
      </div>
      <div class="graph-node node-2">
        <span class="node-label">AuthController</span>
      </div>
      <div class="graph-node node-3">
        <span class="node-label">Database</span>
      </div>
      <div class="graph-node node-4">
        <span class="node-label">API</span>
      </div>
      <div class="graph-node node-5">
        <span class="node-label">Cache</span>
      </div>

      <!-- Connection lines (SVG) -->
      <svg class="graph-connections" viewBox="0 0 400 300" preserveAspectRatio="xMidYMid meet">
        <!-- Lines connecting nodes -->
        <line class="connection-line line-1" x1="200" y1="50" x2="80" y2="130" />
        <line class="connection-line line-2" x1="200" y1="50" x2="320" y2="130" />
        <line class="connection-line line-3" x1="80" y1="130" x2="140" y2="230" />
        <line class="connection-line line-4" x1="320" y1="130" x2="260" y2="230" />
        <line class="connection-line line-5" x1="140" y1="230" x2="260" y2="230" />
        <line class="connection-line line-6" x1="200" y1="50" x2="200" y2="150" />
      </svg>

      <!-- Central pulse effect -->
      <div class="graph-pulse"></div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 6rem 1.5rem 4rem;
    overflow: hidden;
  }

  /* Subtle background */
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.015) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.015) 1px, transparent 1px);
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 80%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 30%, transparent 80%);
  }

  /* Hero content */
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-headline {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .hero-subheadline {
    font-size: clamp(1.1rem, 2vw, 1.35rem);
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }

  /* CTA Buttons */
  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 4rem;
  }

  .hero-ctas .btn-primary,
  .hero-ctas .btn-secondary {
    font-size: 1.1rem;
    padding: 1rem 2rem;
    gap: 0.5rem;
  }

  .btn-icon {
    width: 1.25rem;
    height: 1.25rem;
    transition: transform 0.2s ease;
  }

  .btn-icon-left {
    width: 1.25rem;
    height: 1.25rem;
  }

  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }

  /* Stats section - clean solid style */
  .hero-stats {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 1.5rem 2rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    max-width: 700px;
    margin: 0 auto;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    padding: 0 1rem;
  }

  .stat-value {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 600;
    color: var(--color-secondary);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--color-border);
  }

  /* Visual / Graph animation */
  .hero-visual {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 500px;
    margin-top: 4rem;
  }

  .graph-container {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
  }

  .graph-connections {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .connection-line {
    stroke: var(--color-border);
    stroke-width: 1.5;
    stroke-linecap: round;
    opacity: 0;
    animation: fade-in 0.5s ease-out forwards;
  }

  .line-1 { animation-delay: 0.1s; }
  .line-2 { animation-delay: 0.2s; }
  .line-3 { animation-delay: 0.3s; }
  .line-4 { animation-delay: 0.4s; }
  .line-5 { animation-delay: 0.5s; }
  .line-6 { animation-delay: 0.15s; }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 0.5; }
  }

  .graph-node {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    color: var(--color-text-secondary);
    opacity: 0;
    transform: scale(0.95);
    animation: node-appear 0.4s ease-out forwards;
  }

  .node-1 {
    top: 5%;
    left: 50%;
    transform: translateX(-50%) scale(0.95);
    animation-delay: 0.1s;
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .node-2 {
    top: 35%;
    left: 10%;
    animation-delay: 0.2s;
  }

  .node-3 {
    top: 35%;
    right: 10%;
    animation-delay: 0.3s;
  }

  .node-4 {
    bottom: 15%;
    left: 25%;
    animation-delay: 0.4s;
  }

  .node-5 {
    bottom: 15%;
    right: 25%;
    animation-delay: 0.5s;
  }

  @keyframes node-appear {
    to {
      opacity: 1;
      transform: translateX(-50%) scale(1);
    }
  }

  .node-2, .node-3, .node-4, .node-5 {
    animation-name: node-appear-simple;
  }

  @keyframes node-appear-simple {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .graph-pulse {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 12px;
    height: 12px;
    background: var(--color-primary);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.8;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero {
      padding: 5rem 1rem 3rem;
    }

    .hero-stats {
      flex-direction: column;
      gap: 1.5rem;
      padding: 1.5rem;
    }

    .stat-divider {
      width: 60px;
      height: 1px;
      background: var(--color-border);
    }

    .hero-visual {
      margin-top: 3rem;
      max-width: 350px;
    }

    .graph-node {
      font-size: 0.65rem;
      padding: 0.4rem 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .hero-ctas {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
      margin-left: auto;
      margin-right: auto;
    }

    .hero-ctas .btn-primary,
    .hero-ctas .btn-secondary {
      width: 100%;
      justify-content: center;
    }
  }
</style>
